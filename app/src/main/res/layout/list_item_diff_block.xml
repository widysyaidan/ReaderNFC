<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textViewDiffBlockDump1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingRight="5dp"
        android:text="@string/text_a" />

    <TextView
        android:id="@+id/textViewDiffBlockDump1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewDiffBlockDump1Label"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/textViewDiffBlockDiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewDiffBlockDump1"
        android:layout_below="@+id/textViewDiffBlockDump1"
        android:layout_marginTop="-7dp"
        android:layout_marginBottom="-7dp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/textViewDiffBlockDump2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewDiffBlockDiff"
        android:text="@string/text_b" />

    <TextView
        android:id="@+id/textViewDiffBlockDump2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewDiffBlockDump1"
        android:layout_below="@+id/textViewDiffBlockDiff"
        android:typeface="monospace" />

    <!-- Separator -->
    <View
        android:id="@+id/separatorDiffBlock"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_alignLeft="@+id/textViewDiffBlockDump2Label"
        android:layout_alignRight="@+id/textViewDiffBlockDump2"
        android:layout_below="@+id/textViewDiffBlockDump2"
        android:background="@color/light_gray" />

</RelativeLayout>
